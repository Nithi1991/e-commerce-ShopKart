<!DOCTYPE html>
<html lang="en">
<%-include('../partials/head') %>

<body>
  <%-include('../partials/admin/dash-navbar') %>

  <body style="width: 100%; box-sizing: border-box; display: flex; justify-content: center; margin: 10px;">
    <div>
      <div class="">
        <div class="date-filter">
          <form action="/sales-details" method="GET">
            <label for="date">Filter by Date:</label>
            <input type="date" id="date" name="date">
            <button class="bg-primary rounded-pill text-light" type="submit">Filter</button>
          </form>
        </div>
        <table class="table table-striped table-bordered " id="DataTable">
          <thead>
            <tr class="text-center bg-dark text-light">
              <th colspan="9" style="border: solid 1px black;">
                <h3>Sales Report</h3>
              </th>
            </tr>
            <tr>
              <th style=" padding: 5px; border: solid 1px black;">Sl.No</th>
              <th style="padding: 5px; border: solid 1px black;">Customer</th>
              <th style="padding: 5px; border: solid 1px black;">Email</th>
              <th style="padding: 5px; border: solid 1px black;">Payment</th>
              <th style="padding: 5px; border: solid 1px black;">Product</th>
              <th style="padding: 5px; border: solid 1px black;">Color</th>
              <th style="padding: 5px; border: solid 1px black;">Quantity</th>
              <th style="padding: 5px; border: solid 1px black;">Amount</th>
              <th style="padding: 5px; border: solid 1px black;">Date</th>
            </tr>
          </thead>

          <tbody>
            <% let count = 1 %>
            <% orders.forEach(order => { %>
            <% order.items.forEach(item => { %>
            <tr>
              <td style="padding: 5px; border: solid 1px black;"><%= count++ %> </td>
              <td style="padding: 5px; border: solid 1px black;"><%= order.customerId.username %> </td>
              <td style="padding: 5px; border: solid 1px black;"><%= order.customerId.email %> </td>
              <td style="padding: 5px; border: solid 1px black;"><%= order.paymentMethod %> </td>
              <td style="padding: 5px; border: solid 1px black;"><%= item.productName %></td>
              <td style="padding: 5px; border: solid 1px black;"><%= item.color %> </td>
              <td style="padding: 5px; border: solid 1px black;"><%= item.quantity %> </td>
              <td style="padding: 5px; border: solid 1px black;"><%= order.totalAmount %> </td>
              <td style="padding: 5px; border: solid 1px black;"><%= new Date(order.createdAt).toLocaleDateString('en-GB') %> </td>
            </tr>
            <% }) %>
            <% }) %>
          </tbody>


        </table>
      </div>
    </div>
  </body>


  <!-- </html>  -->

  <!-- <%-include('../partials/bottom-navbar') %> -->
  <script src="/script/scriptadmin.js"></script>
</body>

</html>



