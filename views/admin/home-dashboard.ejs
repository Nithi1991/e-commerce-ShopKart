<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<body class="d-flex flex-column min-vh-100">
  <%- include('../partials/admin/dash-navbar') %>
  <h2 class="p-3"><i>Dashboard</i></h2>
  <div>
    <p class="d-flex align-items-center text-center justify-content-center"><a class=" text-decoration-none text-light fw-bolder bg-dark rounded-4 p-2" href="/admin/sale-details" method="post">Sales
        Report</a></p>
  </div>
  <ul class="summary-items">
    <li>
      <div class="summary-title color1">
        <span> <i class="fa fa-users"></i> Orders</span>
      </div>
      <div class="summary-body"> <%= ordersCount %></div>
    </li>
    <li>
      <div class="summary-title color2">
        <span> <i class="fa fa-users"></i> Users</span>
      </div>
      <div class="summary-body"><%= usersCount %></div>

    </li>
    <li>
      <div class="summary-title color3">
        <span> <i class="fa fa-users"></i> Products</span>
      </div>
      <div class="summary-body"><%= productsCount %></div>

    </li>
  </ul>



  <section class="container d-flex">


    <div class="col-md-6 m-3">
      <div class="card p-3">
        <h4>Daily Sales</h4>
        <canvas id="saleschart"></canvas>
      </div>
    </div>
    <div class="col-md-6 m-3">
      <div class="card p-3">
        <h4>Products Sold</h4>
        <canvas id="productchart"></canvas>
      </div>
  </section>

  <div class="alert alert-success" role="alert">
    Download Sales Report
    in
    form of
    <button class="btn btn-danger text-decoration-none fw-bold mx-3"><a class=" text-decoration-none text-dark" href="/admin/sales-report/pdf" method="post">PDF</a></button>
    OR
    <button class="btn btn-success text-decoration-none fw-bold mx-3"><a class=" text-decoration-none text-dark" href="/admin/sales-report/excel" method="post">EXCEL</a></button>
  </div>



  <%- include('../partials/bottom-navbar')%>

  <!-- <script defer src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script> -->
  <script src="/script/chart.js"></script>
</body>

</html>