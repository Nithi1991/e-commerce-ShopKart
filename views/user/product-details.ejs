<!DOCTYPE html>
<html lang="en">
<%-include ('../partials/head') %>


  <body>
    <%-include ('../partials/user/user-navbar') %>
  
      <section class="container ">
        <div class="row">

          <div class="col-md-6 position-relative ">
            <div class="d-flex justify-content-center  p-3">
              <div id="img-container" class="img-cont">
                <img id="main-image" class="main-image " src="/<%= product.images[0] %>" alt="">
              </div>

            </div>
            <div class="d-flex px-5 justify-content-center">
              <div class="col-2 d-flex justify-content-center mx-3">
                <div class="card product-alt-card p-2">
                  <img class="product-alt-images" id="image1" onclick="changeImage(this)"
                    src="/<%= product.images[0] %>" alt="">
                </div>
              </div>
              <div class="col-2 d-flex justify-content-center mx-3">
                <div class="card product-alt-card p-2">
                  <img class="product-alt-images" id="image2" onclick="changeImage(this)"
                    src="/<%= product.images[1] %>" alt="">
                </div>
              </div>
              <div class="col-2 d-flex justify-content-center mx-3">
                <div class="card product-alt-card p-2">
                  <img class="product-alt-images" id="image3" onclick="changeImage(this)" src="/<%=product.images[2] %>"
                    alt="">
                </div>
              </div>
            </div>
            <div class="d-flex my-sm-5 my-1 justify-content-center">
              <div class="col-3 d-flex justify-content-center align-items-center">
                <button class="btn-wishlist " style="width: 160px; height: 60px;" onclick="addtoWishlist('<%=product._id %>')"> ADD TO WISHLIST
                </button>
              </div>
              <div class="col-4 d-flex justify-content-center ps-sm-5 ps-1">
                <button class="btn-wishlist " style="width: 160px; height: 60px;" onclick="addtoCart('<%= product._id %>')"> ADD TO CART
                </button>
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div>
              <p class="product-details-title pt-4 mb-0 fs-3 fw-bold">
                <%= product.productname %>
              </p>

            </div>
            <div class="pt-2 product-details-price fs-2 fw-bold">
              <% if(product.offer>0 ){ %>
                <p> ₹ <%= Math.round( (product.price)-( product.price *(product.offer/100))) %>
                <span class="text-primary">(<%=product.offer %>%)</span></p>
           <%   } else{ %>
              <p> ₹ <%= product.price %></p>
          <% } %>
            </div>
            <div class="fs-4 ">
              <p>
                <%= product.description %>
              </p>
            </div>
            <div>
              <p class="mb-0 label-text fs-4 fw-bold">Colors: <%= product.color %>
              </p>
            </div>
            <div class="d-flex mb-3">
              <!-- <div class="pe-3">
                <p class="label-text fs-4 fw-bold">SIZE : <%= product.size %>
                </p>
              </div> -->
            </div>
          </div>
        </div>
        <div class="alert alert-dismissible fade show added-to-cart" role="alert">
          <p class="mb-0"></p>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      </section>


      <%-include('../partials/bottom-navbar') %>
        <script src="https://unpkg.com/js-image-zoom/js-image-zoom.js"></script> 
         <!-- <script src="https://cdn.jsdelivr.net/npm/js-image-zoom/js-image-zoom.min.js"></script>  -->
        <script src="/script/scriptadmin.js"></script>

        <script>
          const mainimage = document.getElementById("main-image")
          function changeImage(image) {
            mainimage.src = image.src
            new ImageZoom(document.getElementById("img-container"), options);
          }
          var options = {
            width: 300,
            height: 350,
            zoomWidth: 600,



            // required
            // more options here
          };
          new ImageZoom(document.getElementById("img-container"), options);

        </script>

  </body>

</html>